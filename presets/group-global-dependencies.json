{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": [
        "^@1024pix/",
        "/^(node|cimg/node)$/",
        "!@1024pix/epreuves-components"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "addLabels": ["auto-bump", ":rocket: Ready to Merge"],
      "automerge": true
    },
    {
      "matchPackageNames": ["/^(node|cimg/node)$/"],
      "groupName": "node",
      "rangeStrategy": "bump",
      "versioning": "node"
    },
    {
      "matchPackageNames": ["/^@1024pix//"],
      "minimumReleaseAge": "0",
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": ["npm"],
      "matchPackageNames": ["@1024pix/pix-ui"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "pix-ui",
      "matchFileNames": [
        "./admin/package.json",
        "./orga/package.json",
        "./certif/package.json",
        "./mon-pix/package.json-pix",
        "./junior/package.json"
      ]
    },
    {
      "matchPackageNames": ["/^@1024pix/ember-testing-library$/"],
      "groupName": "pix-ember-testing-library",
      "matchFileNames": [
        "./admin/package.json",
        "./orga/package.json",
        "./certif/package.json",
        "./mon-pix/package.json-pix",
        "./junior/package.json"
      ]
    },
    {
      "matchPackageNames": ["/^@1024pix/stylelint-config$/"],
      "groupName": "pix-stylelint-config",
      "matchFileNames": [
        "./admin/package.json",
        "./orga/package.json",
        "./certif/package.json",
        "./mon-pix/package.json-pix",
        "./junior/package.json"
      ]
    },
    {
      "matchPackageNames": ["/^@1024pix/eslint-config$/"],
      "groupName": "pix-eslint-config",
      "matchFileNames": [
        "./admin/package.json",
        "./orga/package.json",
        "./certif/package.json",
        "./mon-pix/package.json-pix",
        "./junior/package.json"
      ]
    },
    {
      "matchPackageNames": ["/^sinon$/"],
      "groupName": "sinon",
      "matchFileNames": [
        "./api",
        "./admin/package.json",
        "./orga/package.json",
        "./certif/package.json",
        "./mon-pix/package.json-pix",
        "./junior/package.json"
      ]
    },
    {
      "matchPackageNames": ["/^qunit$/"],
      "groupName": "qunit",
      "matchFileNames": [
        "./admin/package.json",
        "./orga/package.json",
        "./certif/package.json",
        "./mon-pix/package.json-pix",
        "./junior/package.json"
      ]
    },
    {
      "matchPackageNames": ["/^nginx$/"],
      "matchManagers": [
        "circleci",
        "docker-compose",
        "dockerfile",
        "github-actions"
      ],
      "groupName": "nginx"
    },
    {
      "matchPackageNames": ["/^redis$/"],
      "matchManagers": [
        "circleci",
        "docker-compose",
        "dockerfile",
        "github-actions"
      ],
      "groupName": "redis"
    },
    {
      "matchPackageNames": ["/^postgres$/"],
      "matchManagers": [
        "circleci",
        "docker-compose",
        "dockerfile",
        "github-actions"
      ],
      "groupName": "postgres"
    }
  ]
}
